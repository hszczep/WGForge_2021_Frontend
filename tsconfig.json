{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "es6",
    "target": "ES2016",
    "allowJs": true,
    "typeRoots": [
      "custom_typings"
    ],
    "lib": [ "es2018", "dom" ],
  },
  "exclude": ["dist", "node_modules"]
}