{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "typeRoots": ["custom_typings"],
    "lib": ["DOM", "es2017", "DOM.Iterable", "ScriptHost", "es2018.promise"]
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["dist", "node_modules", "/.husky"]
}
